[core]
    editor = nvim --cmd 'let g:unception_block_while_host_edits=1'
    pager = bat
[commit]
    gpgsign = true
[tag]
    gpgSign = true
[pull]
    rebase = true
[diff]
    tool = nvimdiff
    guitool = nvimdiff
[difftool]
    prompt = false
[difftool "diffview"]
    cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[merge]
    tool = diffview
    conflictstyle = diff3
[mergetool]
    keepBackup = false
    trustExitCode = false
    prompt = true
[mergetool "diffview"]
    cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[credential "https://github.com"]
    helper = 
    helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper = 
    helper = !/opt/homebrew/bin/gh auth git-credential
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[alias]
    br = branch
    st = status
    co = checkout
[log]
	showSignature = true
