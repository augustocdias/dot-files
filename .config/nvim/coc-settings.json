{
  "coc.preferences.enableMarkdown": true,
  "diagnostic.warningSign": "❢",
  "diagnostic.errorSign": "✗",
  "diagnostic.hintSign": "*",
  "diagnostic.infoSign": "ℹ",
  /* "diagnostic.virtualText": true, */
  "diagnostic.checkCurrentLine": true,
  "codeLens.enable": true,
  "codeLens.subseparator": " | ",
  "suggest.enablePreview": true,
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.cargo.runBuildScripts": true,
  "rust-analyzer.checkOnSave.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.allFeatures": true,
  "rust-analyzer.inlayHints.chainingHintsSeparator": "‣ ",
  "rust-analyzer.inlayHints.typeHintsSeparator": "‣ ",
  "rust-analyzer.inlayHints.typeHints": true,
  "rust-analyzer.hoverActions.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.methodReferences": true,
  "rust-analyzer.lens.implementations": true,
  "codeLens.separator": "",
  "rust-analyzer.debug.runtime": "vimspector",
  "rust-analyzer.debug.vimspector.configuration.name": "lldb",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/OAI/OpenAPI-Specification/main/schemas/v3.1/schema.json": ["/*.yaml", "/*.yml"]
  },
  "yaml.format.enable": true,
  "languageserver": {
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "postgres"]
    }
  }
}
